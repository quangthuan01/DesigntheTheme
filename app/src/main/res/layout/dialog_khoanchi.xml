<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/background_item_list_loaichi"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textKhoanChiDiaLog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:text="TextView"
        android:textColor="@color/yellow"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDateKhoanChiDiaLog"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:text="TextView"
            android:textColor="@color/yellow"
            android:textSize="25dp" />

        <Button
            android:id="@+id/ChonDateKhoanChiDiaLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Chon" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextSoTienChiDiaLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Name"
        android:paddingLeft="20dp"
        android:inputType="number"
        android:textColor="@color/yellow"
        android:textColorHint="@color/yellow"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Update_KhoanChiDiaLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonupdate"
            android:text="@string/update"
            android:layout_weight="1"
            app:backgroundTint="@color/teal_200" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_Delete_KhoanChiDiaLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttondelete"
            android:text="@string/delete"
            app:backgroundTint="@color/mred" />
    </LinearLayout>
</LinearLayout>