<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround">

    <TextView
        android:id="@+id/text1"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/pink"
        android:text="Khoan Chi"
        android:textStyle="bold"
        android:fontFamily="@font/symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinnerKhoanChi"
        android:layout_below="@+id/text1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

        <EditText
            android:layout_below="@id/spinnerKhoanChi"
            android:inputType="number"
            android:hint="So Tien Chi"
            android:textSize="25sp"
            android:background="@drawable/edittext_bavkround"
            android:textColor="@color/yellow"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="20dp"
            android:id="@+id/editTextSoTienKhoanChi"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <TextView
        android:layout_below="@+id/editTextSoTienKhoanChi"
        android:id="@+id/textDateKhoanChi"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:text="Chon ngay "
        android:paddingLeft="20dp"
        android:background="@drawable/edittext_bavkround"
        android:textColor="@color/yellow"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"/>
    <Button
        android:layout_alignParentRight="true"
        android:layout_below="@id/editTextSoTienKhoanChi"
        android:text="Chon"
        android:layout_marginTop="5dp"
        android:id="@+id/btn_chonngayKhoanChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_ThemKhoanChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDateKhoanChi"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/button_backround"
        android:text="Them So Tien Chi"
        android:textAllCaps="false"
        app:backgroundTint="@color/buton" />

    <ListView
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn_ThemKhoanChi"
        android:id="@+id/listViewKhoanChi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>