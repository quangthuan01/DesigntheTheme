<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/edittextDiaLogLoaiChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="TextView"
        android:textColor="@color/pink"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteLoaiChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttondelete"
        android:text="@string/delete"
        android:textAllCaps="false"
        app:backgroundTint="@color/mred"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextDiaLogLoaiChi"
        app:layout_constraintVertical_bias=".3" />

    <Button
        android:id="@+id/updateLoaiChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonupdate"
        android:text="@string/update"
        android:textAllCaps="false"
        app:backgroundTint="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextDiaLogLoaiChi"
        app:layout_constraintVertical_bias=".3" />

    <TextView
        android:id="@+id/editTextDateDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Name"
        android:textSize="25sp"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/pink"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextDiaLogLoaiChi" />

    <Button
        android:id="@+id/chonDateDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextDateDialog"
        app:layout_constraintTop_toBottomOf="@+id/edittextDiaLogLoaiChi" />
</androidx.constraintlayout.widget.ConstraintLayout>