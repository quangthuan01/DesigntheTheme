<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81b9bf"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e5ffff">

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="Brand: "
                android:textColor="@color/mred"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_Brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textview1"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Brand"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Name: "
                android:textColor="@color/mred"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_NamePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Brand"
                android:layout_toRightOf="@+id/textview1"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_NamePhone"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Sytem: "
                android:textColor="@color/mred"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_Sytem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_NamePhone"
                android:layout_toRightOf="@+id/textview1"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Sytem"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Price: "
                android:textColor="@color/mred"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Sytem"
                android:layout_toRightOf="@+id/textview1"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="20sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>