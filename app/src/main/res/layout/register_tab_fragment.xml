<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutName_sinup"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:endIconMode="clear_text"
        app:errorIconDrawable="@drawable/warning"
        app:helperText="Mandatory*"
        app:helperTextTextColor="@android:color/holo_red_dark"
        app:startIconDrawable="@drawable/person">

        <EditText
            android:id="@+id/EditTextInputName_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:textColor="@color/dark"
            android:textSize="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutEmail_sinup"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:endIconMode="custom"
        app:errorIconDrawable="@drawable/warning"
        app:helperText="Opsional*"
        app:helperTextTextColor="@android:color/darker_gray"
        app:startIconDrawable="@drawable/email">

        <EditText
            android:id="@+id/EditTextInputEmail_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@color/dark"
            android:textSize="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutPass_sinup"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:endIconMode="password_toggle"
        app:helperText="Required*"
        app:errorIconDrawable="@drawable/warning"
        app:helperTextTextColor="@android:color/holo_red_dark"
        app:startIconDrawable="@drawable/lock">

        <EditText
            android:id="@+id/EditTextInputPass_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PassWord"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="21"
            android:textColor="@color/dark"
            android:textSize="15dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutPhoneNumber_sinup"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:endIconMode="clear_text"
        app:helperText="Required*"
        app:prefixText="+84"
        app:errorIconDrawable="@drawable/warning"
        app:helperTextTextColor="@android:color/holo_red_dark"
        app:startIconDrawable="@drawable/lock">

        <EditText
            android:id="@+id/EditTextInputConfimPass_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/dark"
            android:textSize="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_backround"
        android:backgroundTint="@color/pink"
        android:layout_marginTop="5dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:text="Register"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/pink" />

</LinearLayout>
